<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mumu.projectli.ElectricityFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_alignParentTop="true">

        </ScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/electric_button_add"
            android:id="@+id/buttonAddElectricity"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout"
            android:layout_below="@+id/textViewTodayElectricity"
            android:layout_alignParentStart="true">

            <TableRow android:layout_marginTop ="10sp">
                <TextView
                    android:layout_column="0"
                    android:text="@string/electric_current_record_time"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:gravity="center"/>
                <TextView
                    android:layout_column="1"
                    android:text="@string/electric_current_record"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:gravity="center"/>
                <TextView
                    android:layout_column="2"
                    android:text="@string/electric_last_record_time"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:gravity="center"/>
                <TextView
                    android:layout_column="3"
                    android:text="@string/electric_last_record"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:gravity="center"/>
            </TableRow>

            <TableRow android:layout_marginTop ="10sp">
                <TextView
                    android:layout_column="0"
                    android:text="2016-07-05"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:gravity="center"/>
                <TextView
                    android:layout_column="1"
                    android:text="4375"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:gravity="center"/>
                <TextView
                    android:layout_column="2"
                    android:text="2016-07-04"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:gravity="center"/>
                <TextView
                    android:layout_column="3"
                    android:text="4370"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:gravity="center"/>
            </TableRow>

        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/electric_today"
            android:id="@+id/textViewTodayElectricity"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/electric_history"
            android:id="@+id/textViewElectricHistory"
            android:layout_below="@+id/tableLayout"
            android:layout_alignStart="@+id/textViewTodayElectricity"
            android:layout_marginTop="36dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewElectricHistory"
            android:layout_below="@+id/textViewElectricHistory"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/buttonAddElectricity"
            android:choiceMode="singleChoice" />
    </RelativeLayout>


</LinearLayout>
